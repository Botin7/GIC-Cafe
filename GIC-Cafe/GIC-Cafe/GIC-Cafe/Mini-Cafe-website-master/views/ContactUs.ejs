<script>
    function validateForm() {
     // Validating Empty Form
     document.getElementById("alertForm").style.display = "none";
     document.getElementById("alertForm").style.display = "none";

     let lastname = document.forms["form"]["lastname"].value;
     let firstname = document.forms["form"]["firstname"].value;
